mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=video.src , autoplay)
        .videoPlayer__controls
            .videoPlayer__column
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1", value="0.5")
                span.volumeButton#jsVolumeButton
                    i.fas.fa-volume-down
                span
                    span#jsCurrentTime 00:00:00 
                    |/
                    span#jsTotalTime 00:00:00
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-pause
            .videoPlayer__column
                span#jsExpandButton
                    i.fas.fa-expand
            .videoPlayer__playtime
                input.setPlaytime#jsSetPlaytime(type="range", min="0", max="1", step="0.005", value="0")